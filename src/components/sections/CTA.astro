---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section id="cta" class="pt-22 pb-42"> 
  <Container>
    <div class="flex flex-col md:flex-row items-center justify-center gap-8">
      <div class="relative w-full md:w-1/2 h-96 md:h-auto"> 
        <img src="/images/recurso.webp" alt="Recurso" class="w-full h-full object-cover"> 
        <div class="absolute inset-0 flex flex-col items-start justify-center p-4 pl-12 md:pl-16 lg:pl-20 w-1/2"> 
          <p class="text-white text-left text-lg mb-1"> 
            ¡Hablemos sobre tus proyectos!
          </p>
          <p class="text-white text-left text-lg mb-1"> 
            Contáctanos y hagámoslos realidad.
          </p>
          <p class="text-white text-left text-lg mb-1"> 
            Te esperamos.
          </p>
          <div class="pt-2">
            <a href="#Hero">
              <Button variant="primary">
                <span class="text-white">Contáctanos</span>
              </Button>
            </a>
          </div>
        </div>
      </div>
      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative w-full md:w-1/2">
        <h2 class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight font-bold text-heading-1">
          Empieza ya con tu <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600">Estrategia 360°</span> de marketing
        </h2>
      </div>
    </div>
  </Container>
</section>
