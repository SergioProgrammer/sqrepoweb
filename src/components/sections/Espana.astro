const provincias = [
	"Álava",
	"Albacete",
	"Alicante",
	"Almería",
	"Asturias",
	"Ávila",
	"Badajoz",
	"Barcelona",
	"Burgos",
	"Cáceres",
	"Cádiz",
	"Cantabria",
	"Castellón",
	"Ciudad Real",
	"Córdoba",
	"Cuenca",
	"Gerona",
	"Granada",
	"Guadalajara",
	"Guipúzcoa",
	"Huelva",
	"Huesca",
	"Islas Baleares",
	"Jaén",
	"La Coruña",
	"La Rioja",
	"Las Palmas",
	"León",
	"Lérida",
	"Lugo",
	"Madrid",
	"Málaga",
	"Murcia",
	"Navarra",
	"Orense",
	"Palencia",
	"Pontevedra",
	"Salamanca",
	"Santa Cruz de Tenerife",
	"Segovia",
	"Sevilla",
	"Soria",
	"Tarragona",
	"Teruel",
	"Toledo",
	"Valencia",
	"Valladolid",
	"Vizcaya",
	"Zamora",
	"Zaragoza",
];
---

<section class="container mx-auto p-8">
  <h2 class="text-2xl font-bold text-center mb-6">Selecciona una provincia</h2>
  <div class="grid grid-cols-4 gap-4">
    {provincias.map(provincia => {
      const url = provincia
        .normalize("NFD") 
        .replace(/[\u0300-\u036f]/g, "") 
        .replace(/ /g, "") 
        .toLowerCase(); 

      return (
        <a href={url} class="bg-primary text-white py-2 px-4 rounded-lg text-center shadow-lg transition-transform transform hover:scale-105">
          {provincia}
        </a>
      );
    })}
  </div>
</section>
